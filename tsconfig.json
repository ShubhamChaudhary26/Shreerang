{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    // ADD THIS SECTION BELOW:
    "paths": {
      "@/*": ["./*"], // This is often generated by Next.js for components, etc.
      "@/lib/*": ["./lib/*"] // <--- ADD THIS LINE FOR YOUR LIB FOLDER
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/components/Candidate/CandidateDetails"  ],
  "exclude": [
    "node_modules"
  ]
}